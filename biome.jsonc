{
  "$schema": "https://biomejs.dev/schemas/2.2.7/schema.json",
  "vcs": {
	"enabled": false,
	"clientKind": "git",
	"useIgnoreFile": false
  },
  "files": {
    "includes": ["src/**/*"]
  },
  "assist": {
	"enabled": true,
	"actions": {
	  "source": {
		"organizeImports": "on"
	  }
	}
  },
  "formatter": {
	"enabled": true,
	"indentStyle": "space",
	"indentWidth": 2,
	"lineWidth": 110
  },
  "linter": {
	"enabled": true,
	"rules": {
	  "recommended": true
	}
  },
  "css": {
	"formatter": {
	  "quoteStyle": "single"
	}
  },
  "javascript": {
	"formatter": {
	  "quoteStyle": "single",
	  "trailingCommas": "es5"
	}
  },
  "json": {
	"formatter": {
	  "indentStyle": "space",
	  "indentWidth": 2
	}
  }
}
